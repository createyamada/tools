SET LONG 2000000000;
SET LONGCHUNKSIZE 2000000;
SET PAGESIZE 0;
SET FEEDBACK OFF;

BEGIN
  DBMS_METADATA.SET_TRANSFORM_PARAM(DBMS_METADATA.SESSION_TRANSFORM,'EMIT_SCHEMA',false);
  DBMS_METADATA.SET_TRANSFORM_PARAM(DBMS_METADATA.SESSION_TRANSFORM,'DATA',true);
  DBMS_METADATA.SET_TRANSFORM_PARAM(DBMS_METADATA.SESSION_TRANSFORM,'DATA_OPTIONS',DBMS_METADATA.DATA_OPTIONS_INSERT);
END;
/

SPOOL insert_data.sql;

SELECT DBMS_METADATA.GET_DDL('TABLE', table_name, 'MY_SCHEMA')
  FROM dba_tables
 WHERE owner = 'MY_SCHEMA';

SPOOL OFF;
