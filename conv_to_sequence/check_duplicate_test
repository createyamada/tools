@echo off
REM ==== コピー元のネットワークドライブ ====
set SOURCE=\\SERVER\share\folder

REM ==== バッチを実行したディレクトリ ====
set TARGET=%~dp0

REM ==== ネットワークにアクセスできるか確認 ====
ping -n 1 SERVER >nul 2>&1
if errorlevel 1 (
    echo ネットワークに接続できません。サーバー: SERVER
    pause
    exit /b
)

REM ==== .xlsxファイルをコピー ====
echo コピー中... %SOURCE% → %TARGET%
copy "%SOURCE%\*.xlsx" "%TARGET%" /Y

REM ==== 結果確認 ====
if errorlevel 1 (
    echo コピーに失敗しました。
) else (
    echo コピー完了しました。
)

pause

